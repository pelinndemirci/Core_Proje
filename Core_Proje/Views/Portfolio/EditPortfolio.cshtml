@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "EditPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
    @using (Html.BeginForm("EditPortfolio", "Portfolio", FormMethod.Post))
    {
        <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Proje Düzenleme Sayfası</p>
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x=>x.PortfolioID)
                        <br />
                        @Html.Label("Proje Başlığı")
                        @Html.TextBoxFor(x=>x.Name, new{@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.Name)
                        <br />
                        <label>Resim Uzantısı</label>
                        @Html.TextBoxFor(x=>x.ImageUrl, new{@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.ImageUrl)
                        <br />
                        <label>Görsel 1 </label>
                        @Html.TextBoxFor(x=>x.Image1, new{@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.Image1)
                        <br />
                        <label>Görsel 2</label>
                        @Html.TextBoxFor(x=>x.Image2, new{@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.Image2)
                        <br />
                        <label>Görsel 3</label>
                        @Html.TextBoxFor(x=>x.Image3, new{@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.Image3)
                        <br />
                        <label>Görsel 4</label>
                        @Html.TextBoxFor(x=>x.Image4, new{@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.Image4)
                        <br />
                        <label>Platform</label>
                        @Html.TextBoxFor(x=>x.Platform, new{@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.Platform)
                        <br />
                        <label>Price</label>
                        @Html.TextBoxFor(x=>x.Price, new{@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.Price)
                        <br />
                        <label>Tamamlanma Oranı</label>
                        @Html.TextBoxFor(x=>x.Value, new{@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.Value)
                        <br />
                        <button class="btn btn-info">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    }
